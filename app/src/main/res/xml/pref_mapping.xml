<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_title_group_mapping_crosshair">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_key_utilizar_cursor_mapeamento"
            android:summary="@string/pref_summary_utilizar_cursor_mapeamento"
            android:title="@string/pref_title_utilizar_cursor_mapeamento" />

        <com.github.danielnilsson9.colorpickerview.preference.ColorPreference
            android:defaultValue="0xFFFFFF00"
            android:key="@string/pref_key_color_cursor"
            android:summary="@string/pref_summary_color_cursor"
            android:title="@string/pref_title_color_cursor" />

        <!--suppress AndroidDomInspection -->
        <net.jayschwa.android.preference.SliderPreference
            android:defaultValue="0.5"
            android:dialogMessage="@string/pref_dialogmessage_espessura_mira_mapeamento"
            android:key="@string/pref_key_espessura_mira_mapeamento"
            android:summary="@string/pref_summary_espessura_mira_mapeamento"
            android:title="@string/pref_title_espessura_mira_mapeamento" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_title_group_mapping_information">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_key_exibir_area_mapeamento"
            android:summary="@string/pref_summary_exibir_area_mapeamento"
            android:title="@string/pref_title_exibir_area_mapeamento" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_title_group_mapping_behavior">

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_key_deixar_tela_ativa_mapeamento_gps"
            android:summary="@string/pref_summary_deixar_tela_ativa_mapeamento_gps"
            android:title="@string/pref_title_deixar_tela_ativa_mapeamento_gps" />

        <!--suppress AndroidDomInspection -->
        <net.jayschwa.android.preference.SliderPreference
            android:defaultValue="0.0"
            android:dialogMessage="@string/pref_dialogmessage_seletor_proximidade"
            android:key="@string/pref_key_seletor_proximidade"
            android:summary="@string/pref_summary_seletor_proximidade"
            android:title="@string/pref_title_seletor_proximidade" />

        <!--suppress AndroidDomInspection -->
        <net.jayschwa.android.preference.SliderPreference
            android:defaultValue="0.0"
            android:dialogMessage="@string/pref_dialogmessage_seguir_por_tempo"
            android:key="@string/pref_key_seguir_por_tempo"
            android:summary="@string/pref_summary_seguir_por_tempo"
            android:title="@string/pref_title_seguir_por_tempo" />

        <!--suppress AndroidDomInspection -->
        <net.jayschwa.android.preference.SliderPreference
            android:defaultValue="0.0"
            android:dialogMessage="@string/pref_dialogmessage_seguir_por_distancia"
            android:key="@string/pref_key_seguir_por_distancia"
            android:summary="@string/pref_summary_seguir_por_distancia"
            android:title="@string/pref_title_seguir_por_distancia" />
    </PreferenceCategory>
</PreferenceScreen>
