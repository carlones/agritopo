<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <Preference
        android:key="@string/pref_key_ultima_sincronizacao"
        android:dialogMessage="@string/pref_summary_ultima_sincronizacao"
        android:title="@string/pref_title_ultima_sincronizacao" />

    <net.jayschwa.android.preference.SliderPreference
        android:defaultValue="5"
        android:dialogMessage="@string/pref_dialogmessage_tempo_sincronizacao"
        android:key="@string/pref_key_tempo_sincronizacao"
        android:summary="@array/pref_summary_tempo_sincronizacao_values"
        android:title="@string/pref_title_tempo_sincronizacao" />

    <EditTextPreference
        android:defaultValue="http://portal.neogis.com.br"
        android:dialogMessage="@string/pref_summary_host_sincronia_objetos"
        android:key="@string/pref_key_host_sincronia_objetos"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_host_sincronia_objetos" />
</PreferenceScreen>
