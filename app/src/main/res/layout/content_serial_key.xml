<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.neogis.agritopo.activity.SerialKeyActivity"
    tools:showIn="@layout/activity_serial_key">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5sp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="368sp"
            android:layout_height="495sp"
            android:padding="20sp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:text="@string/content_serial_key_informe_seu_email"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/serial_email_edit"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@+id/serial_key_edit"
                android:padding="5sp"
                android:textSize="20sp"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:text="@string/content_serial_key_informe_sua_chave"
                android:textSize="20sp" />

            <br.com.sapereaude.maskedEditText.MaskedEditText
                android:id="@+id/serial_key_edit"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="textCapCharacters"
                android:padding="5sp"
                android:textSize="30sp"
                mask:allowed_chars="0123456789ZXCVBNMASDFGHJKLQWERTYUIOP"
                mask:mask="####-####"></br.com.sapereaude.maskedEditText.MaskedEditText>

            <Button
                android:id="@+id/serial_key_button_pronto"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_marginLeft="70sp"
                android:layout_marginRight="70sp"
                android:layout_marginTop="20sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/content_serial_key_ativar"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:text="@string/content_serial_key_network_needed"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
